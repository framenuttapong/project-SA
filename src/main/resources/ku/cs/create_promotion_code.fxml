<BorderPane fx:id="borderHome" prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.HomeController">
   <left>
      <Pane prefHeight="500.0" prefWidth="375.0" styleClass="linear-gradient" stylesheets="@../css/style.css" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="375.0">
               <children>
                  <HBox prefHeight="36.0" prefWidth="105.0">
                     <children>
                        <Circle fx:id="btnClose" fill="#ff6363" onMouseClicked="#handleMouseEvent" radius="10.0" stroke="WHITE" strokeType="INSIDE">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Circle>
                        <Circle fx:id="btnY" fill="#ffff69" layoutX="20.0" layoutY="20.0" onMouseClicked="#handleMouseEvent" radius="10.0" stroke="WHITE" strokeType="INSIDE">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Circle>
                        <Circle fx:id="btnG" fill="#83dd83" layoutX="40.0" layoutY="20.0" onMouseClicked="#handleMouseEvent" radius="10.0" stroke="WHITE" strokeType="INSIDE">
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Circle>
                     </children>
                  </HBox>
                  <Label prefHeight="18.0" prefWidth="385.0" text="red = closeProgram" />
                  <Label prefHeight="18.0" prefWidth="390.0" text="yellow = creater" />
                  <Label prefHeight="18.0" prefWidth="402.0" text="green = tutorial" />
               </children>
            </VBox>
         </children>
      </Pane>
   </left>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="paneSignIn" prefHeight="200.0" prefWidth="200.0" styleClass="back-white" stylesheets="@../css/style.css">
               <children>
                  <TextField fx:id="showPasswordRegister" layoutX="30.0" layoutY="253.0" prefHeight="40.0" prefWidth="315.0" promptText="Password" styleClass="text-field" stylesheets="@../css/style.css" visible="false" />
                  <TextField fx:id="showConfirmPasswordRegister" layoutX="30.0" layoutY="312.0" prefHeight="40.0" prefWidth="315.0" promptText="Confirm Password" styleClass="text-field" stylesheets="@../css/style.css" visible="false" />
                  <VBox prefHeight="500.0" prefWidth="375.0">
                     <children>
                        <ImageView fx:id="btnBack" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#handleMouseEvent" pickOnBounds="true" preserveRatio="true">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                           <image>
                              <Image url="@../icons/back.png" />
                           </image>
                        </ImageView>
                        <Label text="Sign Up">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="30.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="nameTextField" prefHeight="40.0" prefWidth="300.0" promptText="Your Name" stylesheets="@../css/style.css">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="30.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="errorName" prefHeight="19.0" prefWidth="387.0" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="39.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="usernameTextField" prefHeight="40.0" prefWidth="300.0" promptText="Username" styleClass="text-field" stylesheets="@../css/style.css">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="errorUsername" layoutX="49.0" layoutY="185.0" prefHeight="19.0" prefWidth="387.0" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="39.0" />
                           </VBox.margin>
                        </Label>
                        <PasswordField fx:id="hidePasswordRegister" prefHeight="40.0" prefWidth="300.0" promptText="Password" stylesheets="@../css/style.css">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </VBox.margin>
                        </PasswordField>
                        <Label fx:id="errorPassword" layoutX="49.0" layoutY="244.0" prefHeight="19.0" prefWidth="387.0" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="39.0" />
                           </VBox.margin>
                        </Label>
                        <PasswordField fx:id="hideConfirmPasswordRegister" prefHeight="40.0" prefWidth="300.0" promptText="Confirm Password" styleClass="text-field" stylesheets="@../css/style.css">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </VBox.margin>
                        </PasswordField>
                        <Label fx:id="errorConfirmPassword" layoutX="10.0" layoutY="303.0" prefHeight="19.0" prefWidth="387.0" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="39.0" />
                           </VBox.margin>
                        </Label>
                        <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="35.0" prefWidth="320.0" styleClass="button-login" stylesheets="@../css/style.css" text="Create a new account.">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="30.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <ImageView fx:id="iconPasswordRegister" fitHeight="20.0" fitWidth="20.0" layoutX="320.0" layoutY="263.0" onMouseClicked="#handleMouseEvent" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/hide_password.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="iconConfirmPasswordRegister" fitHeight="20.0" fitWidth="20.0" layoutX="320.0" layoutY="322.0" onMouseClicked="#handleMouseEvent" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/hide_password.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
            <Pane fx:id="paneLogin" prefHeight="200.0" prefWidth="200.0" styleClass="back-white" stylesheets="@../css/style.css">
               <children>
                  <TextField fx:id="showPasswordLogin" layoutX="30.0" layoutY="230.0" prefHeight="40.0" prefWidth="315.0" promptText="Password" styleClass="text-field" stylesheets="@../css/style.css" />
                  <VBox prefHeight="500.0" prefWidth="375.0">
                     <children>
                        <Label prefHeight="45.0" prefWidth="102.0" text="Login">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="30.0" top="90.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="usernameLogin" prefHeight="40.0" prefWidth="300.0" promptText="Username" styleClass="text-field" stylesheets="@../css/style.css">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="30.0" />
                           </VBox.margin>
                        </TextField>
                        <PasswordField fx:id="hidePasswordLogin" prefHeight="40.0" prefWidth="300.0" promptText="Password" styleClass="text-field" stylesheets="@../css/style.css">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="25.0" />
                           </VBox.margin>
                        </PasswordField>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="35.0" prefWidth="320.0" styleClass="button-login" stylesheets="@../css/style.css" text="Login">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="25.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="btnSignUp" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="35.0" prefWidth="320.0" styleClass="button-login" stylesheets="@../css/style.css" text="Don't have an account?">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="25.0" />
                           </VBox.margin>
                        </Button>
                        <Label fx:id="messageLogin" prefHeight="19.0" prefWidth="387.0" textFill="RED">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="100.0" right="90.0" top="40.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  <ImageView fx:id="iconPasswordLogin" fitHeight="20.0" fitWidth="20.0" layoutX="320.0" layoutY="240.0" onMouseClicked="#handleMouseEvent" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/hide_password.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
         </children>
      </StackPane>
   </center>
</BorderPane>