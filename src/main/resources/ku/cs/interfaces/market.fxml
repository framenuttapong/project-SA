<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.market.MarketController">
    <left>
        <Pane prefHeight="600.0" prefWidth="240.0" styleClass="linear-gradient" stylesheets="@styles/style2.css" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="600.0" prefWidth="240.0">
                    <children>
                        <HBox prefHeight="40.0" prefWidth="240.0">
                            <children>
                                <Circle fx:id="btnClose" fill="#ff6363" radius="10.0" stroke="WHITE" strokeType="INSIDE">
                                    <HBox.margin>
                                        <Insets left="10.0" top="10.0" />
                                    </HBox.margin>
                                </Circle>
                                <Circle fill="#ffff69" radius="10.0" stroke="WHITE" strokeType="INSIDE">
                                    <HBox.margin>
                                        <Insets left="10.0" top="10.0" />
                                    </HBox.margin>
                                </Circle>
                                <Circle fill="#83dd83" radius="10.0" stroke="WHITE" strokeType="INSIDE">
                                    <HBox.margin>
                                        <Insets left="10.0" top="10.0" />
                                    </HBox.margin>
                                </Circle>
                            </children>
                        </HBox>
                        <Circle fx:id="profilePicture" fill="WHITE" radius="80.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="3.5">
                            <VBox.margin>
                                <Insets left="40.0" right="40.0" top="5.0" />
                            </VBox.margin>
                        </Circle>
                        <HBox prefHeight="40.0" prefWidth="240.0">
                            <children>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="30.0" top="5.0" />
                                    </HBox.margin>
                                    <image>
                                        <Image url="@../icons/profile.png" />
                                    </image>
                                </ImageView>
                                <Button fx:id="btnProfile"  prefHeight="30.0" styleClass="button-menu" stylesheets="@styles/style2.css" text="Profile">
                                    <HBox.margin>
                                        <Insets bottom="5.0" right="10.0" top="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="185.0" prefHeight="40.0" prefWidth="240.0">
                            <children>
                                <ImageView fx:id="iconLabel_I" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="30.0" top="5.0" />
                                    </HBox.margin>
                                </ImageView>
                                <Button fx:id="btnLabel_I" prefHeight="30.0" styleClass="button-menu" stylesheets="@styles/style2.css" text="btnLabel">
                                    <HBox.margin>
                                        <Insets bottom="5.0" right="10.0" top="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="225.0" prefHeight="40.0" prefWidth="240.0">
                            <children>
                                <ImageView fx:id="iconLabel_II" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="30.0" top="5.0" />
                                    </HBox.margin>
                                </ImageView>
                                <Button fx:id="btnLabel_II" prefHeight="30.0" styleClass="button-menu" stylesheets="@styles/style2.css" text="btnLabel">
                                    <HBox.margin>
                                        <Insets bottom="5.0" right="10.0" top="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="370.0" prefHeight="40.0" prefWidth="240.0">
                            <children>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="30.0" top="5.0" />
                                    </HBox.margin>
                                    <image>
                                        <Image url="@../icons/log_out.png" />
                                    </image>
                                </ImageView>
                                <Button fx:id="btnSignOut" prefHeight="30.0" styleClass="button-menu" stylesheets="@styles/style2.css" text="Sign out">
                                    <HBox.margin>
                                        <Insets bottom="5.0" right="10.0" top="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="210.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets top="-50.0" />
            </BorderPane.margin>
        </Pane>
    </left>
    <center>
        <Pane prefHeight="550.0" prefWidth="760.0" styleClass="back-white" stylesheets="@styles/style2.css">
            <children>
                <VBox prefHeight="550.0" prefWidth="760.0">
                    <children>
                        <HBox alignment="TOP_RIGHT" prefHeight="35.0" prefWidth="760.0">
                            <children>
                                <ComboBox fx:id="sortComboBox" prefWidth="150.0" promptText="Sort">
                                    <HBox.margin>
                                        <Insets right="10.0" top="5.0" />
                                    </HBox.margin>
                                </ComboBox>
                            </children>
                        </HBox>
                        <HBox prefHeight="515.0" prefWidth="760.0">
                            <children>
                                <ScrollPane prefHeight="520.0" prefWidth="760.0">
                                    <content>
                                        <GridPane fx:id="gridProduct" prefHeight="515.0" prefWidth="743.0" styleClass="back-white" stylesheets="@styles/style2.css">
                                            <columnConstraints>
                                                <ColumnConstraints />
                                            </columnConstraints>
                                        </GridPane>
                                    </content>
                                    <HBox.margin>
                                        <Insets left="2.0" />
                                    </HBox.margin>
                                </ScrollPane>
                            </children>
                            <VBox.margin>
                                <Insets top="-0.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </Pane>
    </center>
    <top>
        <Pane prefHeight="50.0" styleClass="menu-bar" stylesheets="@styles/style2.css" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="240.0" />
            </BorderPane.margin>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="380.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="50.0" text="Marketplace" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="30.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="TOP_RIGHT" layoutX="380.0" prefHeight="50.0" prefWidth="380.0">
                    <children>
                        <Label fx:id="roleLabel" alignment="CENTER" prefHeight="50.0" text="Role" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="25.0" />
                            </font>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="nameLabel" alignment="CENTER" prefHeight="50.0" text="Firstname Lastname" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="25.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
        </Pane>
    </top>
